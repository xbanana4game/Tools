@ECHO OFF
REM ----------------------------------------------------------------------
REM Read Settings
REM ----------------------------------------------------------------------
IF NOT EXIST %USERPROFILE%\Settings.cmd (EXIT)
CALL %USERPROFILE%\Settings.cmd


REM ======================================================================
REM
REM                                Main
REM
REM ======================================================================
REM ----------------------------------------------------------------------
REM 
REM ----------------------------------------------------------------------
SET /P ARCHIVE_EXT="Enter EXT: "
7z a -t7z -sdel %ARCHIVE_EXT%-files.7z  *.%ARCHIVE_EXT% -r
7z l %ARCHIVE_EXT%-files.7z

CALL :Msg Finished
EXIT


REM ======================================================================
REM
REM                                Function
REM
REM ======================================================================
:Msg
	SET MSG=%1
	SET /P END=%MSG%
	EXIT /B

